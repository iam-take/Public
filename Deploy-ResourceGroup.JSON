{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ResourceGroupName": {
            "type": "string",
            "defaultValue": "AZ-RG-TakeTest",
            "metadata": {
                "description": "Enter the name for the resource group"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "westeurope",
            "allowedValues": [
                "westeurope",
                "northeurope"
            ],
            "metadata": {
                "description": "Select the location of the Resource"
            }
        }
        
    },
    "variables": {
        "DeployVersion": "1.0.0.0"
    },
    "resources": [
        {
            "type": "ResourceGroup",
            "apiVersion": "2018-05-01",
            "location": "[parameters('Location')]",
            "name": "[parameters('ResourceGroupName')]",
            "properties": {},
            "tags": {
                "DeployVersion": "[variables('DeployVersion')]",
                "Environment": "PROD",
                "Project": "Assesment",
                "CreatedBy": "Take Bakker"
            },
            "comments": "Default Resourcegroup for deploying the resources to"

        }
    ]
}