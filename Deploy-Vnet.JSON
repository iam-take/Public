{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "VNetName": {
        "type": "string",
        "defaultValue": "AZ-VNET-TakeTest",
        "metadata": {
          "description": "VNet name"
        }
      },
      "VNetAddressPrefix": {
        "type": "string",
        "defaultValue": "192.168.0.0/16",
        "metadata": {
          "description": "VNET Address prefix"
        }
      },
      "SubnetPrefix": {
        "type": "string",
        "defaultValue": "192.168.100.0/24",
        "metadata": {
          "description": "Subnet 1 Prefix"
        }
      },
      "SubnetName": {
        "type": "string",
        "defaultValue": "AZ-SN-TakeTest-1",
        "metadata": {
          "description": "Subnet 1 Name"
        }
      },
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location for all resources."
        }
      }
    },
    "variables": {
      "DeployVersion": "1.0.0.1"
    },
    "resources": [
      {
        "apiVersion": "2018-10-01",
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[parameters('VNetName')]",
        "location": "[parameters('location')]",
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[parameters('VNetAddressPrefix')]"
            ]
          }
        },
        "tags": {
          "DeployVersion": "[variables('DeployVersion')]"
          },
        "resources": [
          {
            "apiVersion": "2018-10-01",
            "type": "subnets",
            "location": "[parameters('location')]",
            "name": "[parameters('SubnetName')]",
            "dependsOn": [
              "[parameters('vnetName')]"
            ],
            "properties": {
              "addressPrefix": "[parameters('SubnetPrefix')]"
            }
          }
        ]
      }
    ],
    "outputs": {
      "SubnetRef": {
        "type": "string",
        "value":  "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnet1Name'))]"
      }
    }
  }